*
* One time initializations
*
one_time_init:
       .proc
       li   r0,1
       mov  r0,@one
       inc  r0
       mov  r0,@two
       bl   @clear_pad
       bl   @copy_vdp_copy_to_pad
       bl   @copy_speech_read_to_pad
       bl   @speech_check
       bl   @graphics_mode
       bl   @init_vdp_ram
       clr  @info_panel_updates
       clr  @play_field_updates
       clr  @double_buffer_flag
*      Play music
       li   r0,bipbop_module
       bl   @play_module
       li   r0,speech_data+2
       mov  @speech_data,r1
       bl   @speak
       .endproc
*// one_time_init

