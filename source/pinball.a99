       seto *r2                        ; Select ROM bank
       mov  *r0,r0                     ; Map address
       mov  @y,r2                      ; Ball y
       srl  r2,4                       ; To integer
       s    *r1+,r2                    ; Ball y - flipper start y
       li   r3,flipper_col_map_width
       mpy  r3,r2                      ; Line offset in r3
