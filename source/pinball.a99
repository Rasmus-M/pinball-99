*********************************************************************************
*
* Handle special rollover
*
* r2 points to special structure
*
handle_special_rollover:
       .proc
       c    r2,@last_special                           ; Same as last?
       jeq  handle_special_rollover_4                  ; If yes then stop
       mov  r2,@last_special                           ; Record as last
       mov  @special_group(r2),r4                      ; Get the special group
       jeq  handle_special_rollover_3                  ; If no group the just add score
       mov  @special_group_type(r4),r0                 ; Get the group type
       ci   r0,special_group_type_rollovers            ; Is it a group of rollovers?
       jeq  handle_special_rollover_1                  ; Jump if yes
       ci   r0,special_group_type_path                 ; Is it a path?
       jeq  handle_special_rollover_2                  ; Jump if yes
       jmp  handle_special_rollover_3                  ; None of the above, just add score
*      Rollovers
handle_special_rollover_1:
       mov  @special_state(r2),r0                      ; Get state
       jne  handle_special_rollover_4                  ; Stop if already lit
       mov  @special_static_sprite(r2),r3              ; Get sprite
       movb @static_alt_color_1(r3),@static_color(r3)  ; Change color
       inc  @special_state(r2)                         ; Record as lit
       inc  @special_group_state(r4)                   ; Count one as lit
       mov  @special_group_state(r4),r0                ; Get the new state
       andi r0,>000f                                   ; Last nybble is the number of specials lit
       c    r0,@special_group_n_specials(r4)           ; All specials lit?
       jlt  handle_special_rollover_3                  ; If no skip ahead
       mov  @special_group_specials(r4),r0             ; Prepare to reset all specials
       mov  @special_group_n_specials(r4),r2           ; Number of special to reset
handle_special_rollover_1a:
       mov  *r0+,r1                                    ; Get a special
       dec  @special_state(r1)                         ; Record as unlit
       mov  @special_static_sprite(r1),r1              ; Get its sprite
       movb @static_alt_color_2(r1),@static_color(r1)  ; Reset sprite color
       dec  @special_group_state(r4)                   ; Count state backwards
       dec  r2
       jne  handle_special_rollover_1a                 ; Loop until all done
*      Light next sprite
       mov  @special_group_state(r4),r1                ; Group state
       andi r1,>00f0                                   ; 2nd last nybble is the number of sprites lit
       srl  r1,4                                       ; To integer
       c    r1,@special_group_n_sprites(r4)            ; All lit?
       jhe  handle_special_rollover_4                  ; If yes just stop
       sla  r1,1                                       ; To word offset
       mov  @bonus_multipliers(r1),@bonus_multiplier   ; Record bonus multiplier
       mov  @special_group_static_sprites(r4),r2       ; Pointer to list of sprites
       a    r1,r2                                      ; Pointer to sprite
       mov *r2,r2                                      ; Get sprite
       movb @static_alt_color_1(r2),@static_color(r2)  ; Change color
       li   r0,>0010                                   ; Record in state
       a    r0,@special_group_state(r4)                ; Record in state
       mov  @bonus_texts(r1),r0                        ; Text to display
       bl   @display_text                              ; Display text
       jmp  handle_special_rollover_4
*      Path
handle_special_rollover_2:
       jmp  handle_special_rollover_3
handle_special_rollover_3:
       mov  @special_score(r2),r0                      ; Get the number of points to add
       bl   @add_score                                 ; Add to score
       bl   @play_warning                              ; Play a sound
handle_special_rollover_4:
       .endproc
